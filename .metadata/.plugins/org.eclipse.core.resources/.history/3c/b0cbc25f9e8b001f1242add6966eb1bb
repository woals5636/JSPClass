			+ " TO_CHAR(hiredate,'yyyy-MM-dd') hiredate, sal, comm, deptno"
			+ " FROM emp "
			+ " WHERE deptno = ? ";
	ResultSet empRs = null;

	int empno, mgr;
	String ename, job;
	Date hiredate;
	double sal, comm;
		
