  		Iterator<DeptVO> deptIr = deptList.iterator();
  		while (deptIr.hasNext()) {
  			DeptVO deptVO = deptIr.next();
  			int deptno = deptVO.getDeptno();
  			String dname = deptVO.getDname();
  	%>
