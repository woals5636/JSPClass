<%@page import="org.doit.domain.EmpVO"%>
<%@page import="java.util.Date"%>
<%@page import="java.util.Iterator"%>
<%@page import="com.util.DBConn"%>
<%@page import="java.util.ArrayList"%>
<%@page import="org.doit.domain.DeptVO"%>
<%@page import="java.sql.ResultSet"%>
<%@page import="java.sql.PreparedStatement"%>
<%@page import="java.sql.Connection"%>
<%@ page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%
	Connection conn = null;
	PreparedStatement deptStmt = null;
	PreparedStatement empStmt = null;
	ResultSet deptRs = null;
	ResultSet empRs = null;
	ArrayList<DeptVO> deptList = null;
	ArrayList<EmpVO> empList = null;

	try {
		conn = DBConn.getConnection();
		
		// 부서 목록 조회
		String deptSql = "SELECT * FROM dept";
		deptStmt = conn.prepareStatement(deptSql);
		deptRs = deptStmt.executeQuery();
		
		deptList = new ArrayList<>();
		while (deptRs.next()) {
			int deptno = deptRs.getInt("deptno");
			String dname = deptRs.getString("dname");
			String loc = deptRs.getString("loc");

			DeptVO deptVO = new DeptVO().builder().deptno(deptno).dname(dname).loc(loc).build();
			deptList.add(deptVO);

			String selectedDeptnoStr = request.getParameter("deptno"); // URL에서 deptno 파라미터를 가져옴
		    int selectedDeptno = (selectedDeptnoStr != null) ? Integer.parseInt(selectedDeptnoStr) : 0;

		    // 선택된 부서의 사원 목록만 조회
		    if (selectedDeptno != 0) {
		        String empSql = "SELECT empno, ename, job, mgr, TO_CHAR(hiredate, 'yyyy-MM-dd') hiredate, sal, comm, deptno FROM emp WHERE deptno = ?";
		        pstmt = conn.prepareStatement(empSql);
		        pstmt.setInt(1, selectedDeptno);  // 선택된 부서 번호에 맞는 사원 조회
		        empRs = pstmt.executeQuery();

		        empList = new ArrayList<>();
		        while (empRs.next()) {
		            empVO = new EmpVO().builder()
		                .empno(empRs.getInt("empno"))
		                .ename(empRs.getString("ename"))
		                .job(empRs.getString("job"))
		                .mgr(empRs.getInt("mgr"))
		                .hiredate(empRs.getDate("hiredate"))
		                .sal(empRs.getDouble("sal"))
		                .comm(empRs.getDouble("comm"))
		                .deptno(empRs.getInt("deptno"))
		                .build();
		            empList.add(empVO);
		        }
		        empRs.close();
		    }
		}
	}
	catch (Exception e) {
		e.printStackTrace();
	} finally {
		try {
			if (deptRs != null) deptRs.close();
			if (empRs != null) empRs.close();
			if (deptStmt != null) deptStmt.close();
			if (empStmt != null) empStmt.close();
			if (conn != null) conn.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
%>

